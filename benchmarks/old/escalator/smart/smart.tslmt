//#LIA#

goDown = [ topQueue <- sub topQueue c1()];
goUp =   [ botQueue <- sub botQueue c1()];

always assume {
	gte botQueue c0();
	gte topQueue c0();
}

always guarantee {
  // Fairly send the direction with more people
  gt botQueue topQueue    -> goUp;
  !(gt botQueue topQueue) -> goDown;

  // One direction at a time
  !(goDown && goUp);

  // All users leave
  F eq botQueue c0();
  F eq topQueue c0();
}
