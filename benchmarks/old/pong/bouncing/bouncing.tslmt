//#LIA#
initially assume {
	eq loc c0();
}

always guarantee {
	[loc <- sub loc c1()] -> [loc <- sub loc c1()] W (eq loc c0());
	[loc <- add loc c1()] -> [loc <- add loc c1()] W (eq loc c100());
	eq loc c100() -> [loc <- sub loc c1()];
	eq loc c0()   -> [loc <- add loc c1()];
	(lte c0() loc && lte loc c100());
}
